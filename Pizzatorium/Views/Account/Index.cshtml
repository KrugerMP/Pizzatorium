@model Pizzatorium.Models.LUser

@{
                ViewBag.Title = "Login";
}
<link rel="stylesheet" type="text/css" href="~/Content/BackgroundLogin.css" />
<div class="col-lg-3"></div>
<div class="col-lg-6">
    <div class="form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="jumbotron">
            <h1>Log in with user account</h1>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.dUserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.dUserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dUserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.dPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.dPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log in" class="btn btn-default" />
                </div>
            </div>
            <div class="form-group has-error">
                @if (@ViewBag.Success == "Invalid")
                {
                    <label>Failed to login</label>
                }
            </div>
            <h3>Not registered? @Html.ActionLink("Create Account", "Create")</h3>
        </div>
        }
        
    </div>
</div>
<div class="col-lg-3"></div>
